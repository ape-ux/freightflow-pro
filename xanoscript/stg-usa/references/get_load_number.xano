// Returns IPI Tracking Details based on Load Number
query stg-usa/references/get_load_number verb=GET {
  description = "Returns IPI Tracking Details based on Load Number"

  input {
    text loadNumber
  }

  stack {
    api.request {
      url = $env.STG_API_BASE + "/loadNumber/" + $input.loadNumber
      method = "GET"
      headers = []|array_push:"STG-VALIDATION-API-KEY: " + $env.STGVALIDATIONAPIKEY|array_push:"Accept: application/json"
    } as $response
  }

  response = $response
}
